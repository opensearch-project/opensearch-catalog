{
    "template":{
        "mappings":{
            "properties":{
                "http_cookies":{
                    "properties":{
                        "domain":{
                            "type":"text",
                            "fields":{
                                "keyword":{
                                    "type":"keyword",
                                    "ignore_above":256
                                }
                            }
                        },
                        "expiration_time":{
                            "type":"date",
                            "format":"yyyy-MM-dd'T'HH:mm:ss.SSSZ||epoch_millis"
                        },
                        "expiration_time_dt":{
                            "type":"date",
                            "format":"yyyy-MM-dd'T'HH:mm:ss.SSSZ||epoch_millis"
                        },
                        "is_http_only":{
                            "type":"boolean"
                        },
                        "is_secure":{
                            "type":"boolean"
                        },
                        "name":{
                            "type":"keyword",
                            "ignore_above":64
                        },
                        "path":{
                            "type":"text",
                            "fields":{
                                "keyword":{
                                    "type":"keyword",
                                    "ignore_above":1024
                                }
                            }
                        },
                        "samesite":{
                            "type":"keyword",
                            "ignore_above":16
                        },
                        "value":{
                            "type":"text",
                            "fields":{
                                "keyword":{
                                    "type":"keyword",
                                    "ignore_above":4096
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
